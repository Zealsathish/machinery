          .col-xs-11
            %h2 Users
        .row
          .col-xs-1
            %p.text-info.text-right {{users.length}} users
          .col-xs-11
            %table.table.table-striped.table-hover.table-condensed
              %thead
                %tr
                  %th Name
                  %th UID
                  %th GID
                  %th Comment
                  %th Home
                  %th Shell
              %tbody
                {{#users}}
                %tr
                  %td {{name}}
                  %td {{uid}}
                  %td {{gid}}
                  %td {{comment}}
                  %td {{home}}
                  %td {{shell}}
                {{/users}}
      {{/users.length}}

    %script#scope_unmanaged-files.partial{:type => "text/html"}
      {{#unmanaged_files.files.length}}
      %a.scope_anchor{:id => "unmanaged-files"}
      #unmanaged-files_container.scope
        .row
          .col-xs-1
            %a{:href => "#unmanaged-files", :title => "Unmanaged Files"}
