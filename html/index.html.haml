          .col-xs-11
            %h2
              Groups
              .scope-summary
                {{groups.length}} groups
                {{meta_info.groups}}
        .row.scope_content.collapse.in
          .col-xs-1
          .col-xs-11
            %table.table.table-striped.table-hover.table-condensed
