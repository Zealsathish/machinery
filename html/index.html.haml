          .col-xs-11
            %table.table.table-striped.table-hover.table-condensed
              %thead
                %tr
                  %th Name
                  %th Version
                  %th Release
              %tbody
                {{#patterns}}
                %tr
                  %td {{name}}
                  %td {{version}}
                  %td {{release}}
                {{/patterns}}
      {{/patterns.length}}

    %script#scope_users{:type => "text/html"}
