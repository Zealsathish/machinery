                %tr
                  %th Name
                  %th GID
                  %th Password
                  %th Users
              %tbody
                {{#groups}}
                %tr
                  %td {{name}}
                  %td {{gid}}
                  %td {{password}}
                  %td {{users}}
                {{/groups}}
      {{/groups.length}}

