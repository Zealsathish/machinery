        .row
          .col-xs-1
            %p.text-info.text-right {{changed_managed_files.files.length}} files
          .col-xs-11
            %table.table.table-striped.table-hover.table-condensed
              %thead
                %tr
                  %th Name
                  %th Package Name
                  %th Package Version
                  %th Changes
                  %th Mode
                  %th User
                  %th Group
              %tbody
                {{#changed_managed_files.files}}
                %tr
                  %td {{name}}
                  %td {{package_name}}
                  %td {{package_version}}
                  {{#changes.length}}
                  %td {{changes}}
                  {{/changes.length}}
                  {{#error_message}}
                  %td{:title => "{{error_message}}"} Error
                  {{/error_message}}
                  %td {{mode}}
                  %td {{user}}
                  %td {{group}}
                {{/changed_managed_files.files}}
        {{/changed_managed_files.files.length}}

