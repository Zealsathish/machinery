          .col-xs-11
            %h2 Unmanaged Files
        .row
          .col-xs-1
            %p.text-info.text-right {{unmanaged_files.files.length}} files
          .col-xs-11
            %table.table.table-striped.table-hover.table-condensed
              %thead
                %tr
                  %th Name
                  %th Type
              %tbody
                {{#unmanaged_files.files}}
                %tr
                  %td {{name}}
                  %td {{type}}
                {{/unmanaged_files.files}}
      {{/unmanaged_files.files.length}}

